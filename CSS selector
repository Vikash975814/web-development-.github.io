        /* Element selector */
        p{
        color: blue;
        }
        /* ID selecto */
.redelement{
    color:red;
    background-color: aqua;
}
/* class selector */
#redelement
{
    background-color: hotpink;
}
/* group selector */
footer,span{
    background-color: red;
}
    </style>
